{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2023"],
    "types": ["node", "vitest/globals"],
    "composite": true,
    "incremental": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json",
    "../core/src/utils/toml-to-markdown-converter.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/commands/extensions/examples/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [{ "path": "../core" }]
}
